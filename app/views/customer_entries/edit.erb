Edit Page For Customer Entry


<h2>Edit Customer: </h2>

<form class="" action="/customer_entries/<%= @customer_entry.id %>" method="post">
        <input type="hidden" name="_method" value="patch">
    <label for="title">Customer Name: </label>
        <input type="text" name="title" value="<%= @customer_entry.title %>">
    <label for="content">Address: </label>
        <input type="text" name="content" value="<%= @customer_entry.content %>">
    <label for="phone">Phone Number: </label>
        <input type="text" name="phone" value="<%= @customer_entry.phone %>">
        <input type="submit" name="" value="Submit Edit">
</form>